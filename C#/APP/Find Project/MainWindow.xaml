<Window x:Class="Find_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Your App" Height="450" Width="800" ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl>
            <!-- Search Tab -->
            <TabItem Header="Search">
                <Grid>
                    <TextBox x:Name="searchBox" Margin="10" VerticalAlignment="Top" KeyDown="SearchBox_KeyDown"/>
                    <Button Content="Search" Click="SearchButton_Click" Margin="10,40,10,10" VerticalAlignment="Top" />
                    <ListBox x:Name="listBox" Margin="10,106,10,10" SelectionChanged="ListBox_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}">

                                </TextBlock>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <Label x:Name="warningLabel" Content="" Foreground="Red" Margin="10,77,10,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <!-- Settings Tab -->
            <TabItem Header="Settings">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Default Path:" Margin="10" VerticalAlignment="Top" HorizontalAlignment="Right"/>
                    <TextBox x:Name="defaultPathTextBox" Margin="10" VerticalAlignment="Top" Grid.Column="1"/>
                    <!--                   
                    <Label Content="Theme:" Margin="0,39,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Grid.Column="0"/>
                    <ComboBox x:Name="themeComboBox" Margin="10,39,10,0" VerticalAlignment="Top" Grid.Column="1"/>
                    -->
                    <Button Content="Save" Click="SaveButton_Click" Margin="10,344,10,0" VerticalAlignment="Top" Grid.Column="1"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>

</Window>
